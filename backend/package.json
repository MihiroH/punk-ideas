{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": false,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "format": "npx @biomejs/biome format --write ./src ./test ./prisma",
    "format:prisma": "npx prisma format",
    "lint": "npx @biomejs/biome lint --write ./src ./test ./prisma",
    "check": "npx @biomejs/biome check --write ./src ./test ./prisma",
    "migrate": "npx prisma migrate",
    "migrate:dev": "npx prisma migrate dev",
    "postmigrate": "npx @snaplet/seed sync",
    "db:seed": "npx prisma db seed -- --environment production",
    "db:seed:dev": "npx prisma db seed -- --environment development"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/platform-express": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "graphql": "^16.8.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.0",
    "@biomejs/cli-darwin-arm64": "1.8.0",
    "@biomejs/cli-darwin-x64": "1.8.0",
    "@biomejs/cli-linux-arm64": "1.8.0",
    "@biomejs/cli-linux-x64": "1.8.0",
    "@biomejs/cli-win32-arm64": "1.8.0",
    "@biomejs/cli-win32-x64": "1.8.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@prisma/client": "^5.15.0",
    "@snaplet/copycat": "^5.0.0",
    "@snaplet/seed": "^0.97.20",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "jest": "^29.5.0",
    "prisma": "^5.15.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.15.5",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "@snaplet/seed": {
    "config": "prisma/seed/seed.config.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed/seed.ts"
  }
}
